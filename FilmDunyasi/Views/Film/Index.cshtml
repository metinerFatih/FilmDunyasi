@model List<Film>

<h1>Filmler</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Yıl</th>
            <th>Puan</th>
            <th>Türler</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Ad</td>
                <td>@item.Yil</td>
                <td>@item.Puan</td>
                <td>
                    @string.Join(", ", item.Turler.Select(x => x.Ad))
                </td>
                <td>
                    <a asp-action="Duzenle" asp-route-id="@item.Id">Düzenle</a>
                    <a asp-action="Sil" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-controller="Film" asp-action="Ekle">Film Ekle</a>
