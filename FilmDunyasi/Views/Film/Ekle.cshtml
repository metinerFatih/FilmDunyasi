@model Film

<h1>Film Ekle</h1>
<form asp-controller="Film" asp-action="Ekle" method="post">
    <div class="mb-2">
        <label asp-for="Ad"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Puan"></label>
        <input asp-for="Puan" class="form-control" />
        <span asp-validation-for="Puan" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Yil">Yıl</label>
        <input asp-for="Yil" class="form-control" />
        <span asp-validation-for="Yil" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <div class="row">
            @foreach (Tur tur in ViewBag.Turler)
            {
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <label class="d-flex align-items-center">
                        <input type="checkbox" name="turler" value="@tur.Id" class="me-1" />
                        @tur.Ad
                    </label>
                </div>
            }
        </div>
    </div>
    <button class="btn btn-primary">Ekle</button>
</form>