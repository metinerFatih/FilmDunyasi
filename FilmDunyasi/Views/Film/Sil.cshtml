@model Film

<h1>Filmi Sil</h1>

<form asp-controller="Film" asp-action="SilOnay" method="post">

    <input asp-for="Id" class="form-control" type="hidden" value="@Model.Id" />

    <h3 class="text-warning">@Model.Ad (@Model.Yil) filmi silinecek. Emin misiniz?</h3>

    <button class="btn btn-danger">Evet. Filmi sil!</button>
    <a class="btn btn-secondary" asp-action="Index">Hayır. Geri dön!</a>
</form>