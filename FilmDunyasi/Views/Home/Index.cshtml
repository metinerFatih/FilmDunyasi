@model HomeViewModel

<h1>Filmler</h1>

<form class="mb-2 d-flex" method="get">
    <select asp-for="TurId" class="form-select me-2 flex-grow-1" asp-items="ViewBag.Turler">
        <option value="">Tümü</option>
    </select>
    <button class="btn btn-primary">Listele</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Yıl</th>
            <th>Puan</th>
            <th>Türler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Filmler)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Ad</td>
                <td>@item.Yil</td>
                <td>@item.Puan</td>
                <td>
                    @string.Join(", ", item.Turler.Select(x => x.Ad))
                </td>
            </tr>
        }
    </tbody>
</table>